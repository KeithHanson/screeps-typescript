{
  "extends" : [
    "tslint:recommended"
  ],
  "rules": {
    "forin": false,
    "interface-name": [false],
    "no-console": [false],
    "member-ordering": [false],
    "prefer-const": [false],
    "no-namespace": [true, "allow-declarations"],
    "ordered-imports": [false],
    "object-literal-sort-keys": [false],
    "trailing-comma": [
      true,
      "never"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
